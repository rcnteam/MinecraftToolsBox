<Dialog:CustomDialog x:Class="TranslationTools.CommandEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TranslationTools"
      xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
      mc:Ignorable="d" Height="285"
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="-100,0">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="原文" FontSize="16" Margin="0,45,0,0"/>
        <TextBox x:Name="original" VerticalAlignment="Top" Margin="37,45,0,0" Height="80" IsReadOnly="True" TextWrapping="Wrap"/>
        <Button Content="确定" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Confirm" Width="70" Margin="0,0,0,10"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="译文" FontSize="16" Margin="0,135,0,0"/>
        <TextBox x:Name="translated" VerticalAlignment="Top" Margin="37,135,0,0" Height="80" TextWrapping="Wrap"/>
        <Button Content="取消" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Close" Width="70" Margin="0,0,80,10"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="编辑命令方块" FontSize="28"/>
    </Grid>
</Dialog:CustomDialog>
